<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ece.vbfc_bry07.calls">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--PSR ACTIVITIES-->
        <activity
            android:name=".psr_activity.PSRHomeActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".psr_activity.MCPActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".psr_activity.ACPActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".psr_activity.SignatureFormActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".psr_activity.DoctorsInfoActivity"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".psr_activity.MaterialMonitoringActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".psr_activity.SalesReportActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".psr_activity.PSRStatusSummaryActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".psr_activity.QuickSignActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".psr_activity.CallReportActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />

        <!--BDM ACTIVITIES-->
        <activity
            android:name=".bdm_activity.BDMHomeActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".bdm_activity.BDMStatusSummaryActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".bdm_activity.BDMMCPApprovalActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />
        <activity
            android:name=".bdm_activity.MCPApprovalSelectedActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.MyTheme" />

        <!-- DIALOG -->
        <activity
            android:name=".dialog.ViewCycleMonth"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/myDialog" />
        <activity
            android:name=".dialog.ViewDoctorsHistoryDialog"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/myDialog"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".dialog.HelpDialog"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/myDialog" />
        <activity
            android:name=".dialog.DeclareMissedCalls"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/myDialog" />
    </application>
</manifest>
