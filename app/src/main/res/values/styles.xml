<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/text_color</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="TabLayoutTextPref" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/text_color</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#A25063</item>
        <item name="android:textColorHint">#A25063</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#A25063</item>
        <item name="colorControlNormal">@color/toolbar</item>
        <item name="colorControlActivated">@color/toolbar</item>
    </style>

    <style name="tableHeader">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
